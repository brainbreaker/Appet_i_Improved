<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:id="@+id/container"
    android:orientation="vertical"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sunshine.bbreaker.appet_i.ProductActivity$PlaceholderFragment"
    android:background="@color/appeti_bright_yellow"
    android:clickable="true"
    android:weightSum="1"
    >


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/ProductImage"
        android:src="@drawable/ghewar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Paneer Ghewar"
        android:id="@+id/ProductTitle"
        android:textColor="@color/appeti_dark_green"
        android:textSize="35dp"

        android:textStyle="normal"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/ghewar"
        android:id="@+id/ProductDescription"
        android:textColor="@color/appeti_green"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="gravity"
        android:layout_marginTop="10dp" />
    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinnertype"
        app:ms_multiline="false"
        app:ms_hint="Select A Type..."
        app:ms_floatingLabelText="Type"
        app:ms_baseColor="@color/appeti_dark_green"
        app:ms_highlightColor="@color/appeti_green"
        app:ms_arrowColor="#0000FF"
        app:ms_arrowSize="16dp"
        app:ms_alignLabels="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint=""
        />
    <!--app:ms_thickness='2dp'-->
    <!--app:ms_floatingLabelText="floating label"-->
    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinnerquantity"
        app:ms_multiline="false"
        app:ms_hint="Choose an option..."
        app:ms_floatingLabelText="Quantity"
        app:ms_baseColor="@color/appeti_dark_green"
        app:ms_highlightColor="@color/appeti_green"
        app:ms_thickness='2dp'
        app:ms_arrowColor="#0000FF"
        app:ms_arrowSize="16dp"
        app:ms_alignLabels="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <!--  app:ms_floatingLabelColor="#00FF00"-->
    <!--android:hint="Choose an option..."-->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/metamountedittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount"
        app:met_baseColor="@color/appeti_dark_green"
        app:met_primaryColor="@color/appeti_blue"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Amount"
        android:enabled="false"
        android:visibility="visible" />
    <Button
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:text="Add To Cart"
        android:id="@+id/AddToCartButton"
        android:textColor="@color/background_floating_material_light"
        android:background="@color/appeti_dark_green"
        android:textSize="40sp"
        android:layout_marginTop="20dp" />


</LinearLayout>
</ScrollView>